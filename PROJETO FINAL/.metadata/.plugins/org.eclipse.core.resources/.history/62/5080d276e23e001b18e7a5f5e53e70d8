package br.com.isidrocorp.hello.controller;

import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController //usado para deixar publicar/expor na internet, usando o "CTRL+SHIFT+O" para fazer o import da "org.springframework.web.binf.annotation.RestController"
public class HelloController {

	@GetMapping("/hello") // GetMapping serve para fazer chamadas via url -> Qnd vc digitar a url e o /hello, vai chamar a função sayhello
	public String sayHello() {
		return "Hello World Edson";
	}
		
		
		
				
}
